<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Feed</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    
    <style>
        * {
            margin: 0;
            padding: 0;
            
            font-family: 'Poppins', sans-serif;

        }

        html,
        body {
            height: 100%;
            width: 100%;
            box-sizing: border-box;
        }

        .main {
            min-height: 100%;
            width: 100%;
            background-color: #292929;
            
        }

        .box {
        
            min-height: 20vh;
            width: 30vw;
            background-color: #333333;
            display: flex;
            flex-direction: column;
            border-radius: 10px;
            overflow: hidden;
            margin-bottom: 20px;
            margin-top: 20px;
            margin-left: 80px;
            color: white;
        }

        .box .profile {
            height: 50%;
            width: 100%;
            /* background-color: red; */
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .box img {
            height: 35px;
            width: 35px;
            border-radius: 50%;
            object-fit: cover;
            border: 1px solid #45f3ff;
        }

        .container ul,
        .container h2 {
            margin-left: 10vh;
            color: white;
        }

        .container h2 {
            margin-top: 3vh;
        }

        .box p {
            padding: 10px 20px;
            font-size: 20px;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        }
        .navigation {
            width: 100%;
            height: 65px;
            background-color: rgb(67, 67, 67);
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding-left: 1vw;
            border-bottom: 1px solid white;
        }
        .navigation #feed{
            font-size: 1.7vw;
            color: #45F3FF;
        }

        .navigation img {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            float: left;
            flex-shrink: 0;
        }

        .logout {
            font-size: .8em;
            font-family: 'Oswald', sans-serif;
            position: relative;
            right: -18px;
            bottom: -4px;
            overflow: hidden;
            letter-spacing: 3px;
            opacity: 0;
            transition: opacity .45s;
            -webkit-transition: opacity .35s;
            

        }

        .button {
            text-decoration: none;
            float: right;
            padding: 10px 20px;
            margin: 15px;
            /* margin-right: 5vw; */
            color: #45F3FF;
            width: 40px;
            background-color: black;
            transition: width .35s;
            -webkit-transition: width .35s;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .navigation a:hover {
            width: 150px;
        }

        .navigation a:hover .logout {
            opacity: .9;
        }

        .navigation a {
            text-decoration: none;
        }

       
    </style>
</head>

<body>
    <div class="main">
        <div class="navigation">
            <a id="feed" href="/profile">PROFILE</a>

            <a class="button" href="/logout">
                <img src="../images/uploads/<%=user.pic%>" alt="">

                <div class="logout">LOGOUT</div>

            </a>

        </div>
        <% posts.forEach(function(post) { %>
            <div class="box">
                <div class="profile">
                    <img src="/images/uploads/<%= post.author.pic %>" alt="<%= post.author.username %>">
                    <h3>
                        <%=post.author.name%>
                    </h3>
                </div>
                <p>
                    <%=post.post%>
                </p>
                <h6>LIKES <%=post.likes.length%></> <a href="/like/<%= post._id %>"
                    class="btn <%= post.likes.indexOf(user._id) === -1 ? 'btn-primary' : 'btn-danger' %>">
                    <%= post.likes.indexOf(user._id)===-1 ? "Like" : "Unlike" %>
                  </a> </h6>
                
            </div>
            <% }); %>

    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>